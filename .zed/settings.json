{
  "languages": {
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        }
      ]
    },
    "JavaScript": {
      "language_servers": ["biome", "vtsls", "tailwindcss-language-server"],
      "format_on_save": "on"
    },
    "TypeScript": {
      "language_servers": [
        "biome",
        "vtsls",
        "tailwindcss-language-server",
        "color-lsp"
      ],
      "format_on_save": "on"
    },
    "TSX": {
      "language_servers": [
        "biome",
        "vtsls",
        "tailwindcss-language-server",
        "color-lsp"
      ],
      "format_on_save": "on"
    },
    "HTML": {
      "language_servers": ["tailwindcss-language-server"]
    },
    "JSON": {
      "language_servers": ["biome"],
      "format_on_save": "on"
    },
    "CSS": {
      "language_servers": ["biome", "color-lsp"],
      "format_on_save": "on"
    }
  },
  "lsp_document_colors": "background"
}
